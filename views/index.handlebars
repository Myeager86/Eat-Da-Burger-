<h1>Eat Da Burger!</h1>

<h2>Burgers yet to be consumer</h2>

<ul>
  {{#each burger}}
    {{#unless consumed}}
      {{> burger/burger-block consumed=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Consumed burgers</h2>

<ul>
  {{#each burger}}
    {{#if consumed}}
      {{> burger/burger-block sleep=true}}
    {{/if}}
  {{/each}}
</ul>

<h2>Craft a burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="sleepy">Sleepy?</label><br>
    <input type="radio" name="sleepy" value="1" checked> Hungry!<br>
    <input type="radio" name="sleepy" value="0"> Consumed
  </div>

  <button type="submit">Add burger</button>
</form>
